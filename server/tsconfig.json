{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "dist",
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
